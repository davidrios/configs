#!/bin/bash

RESP=$(cat <<EOF | fzf
Logout
Sleep
Reboot
Shutdown
EOF
);

case "$RESP" in
	Logout)
		case "$XDG_SESSION_DESKTOP" in
			sway)
				swaymsg exit
				;;
			*)
				echo not sure how...
				exit 1
		esac
		;;
	Sleep)
		systemctl suspend -i
		;;
	Reboot)
		systemctl reboot
		;;
	Shutdown)
		systemctl poweroff
		;;
	*)
		exit 1
esac
